<div class="coupon-code field field-group" data-hook='coupon_code'>
  <%= form_for order, url: update_checkout_path(order.state) do |form| %>
    <%= form.label :coupon_code %>
    <%= form.text_field :coupon_code, class: 'form-control', placeholder: :coupon_code %>

    <button type="submit" class="btn btn-success btn-block" id="coupon-code-apply-button">
      <%= t('spree.apply_code') %>
    </button>
  <% end %>

  <div id='coupon_status'></div>
</div>